<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
   
    <Grid x:Name="Root" >
        <Grid.RowDefinitions>
            <RowDefinition Height="155*"/>
            <RowDefinition Height="264*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listbox" HorizontalAlignment="Left" Height="371" Margin="4,29,0,0" VerticalAlignment="Top" Width="100"  SelectionChanged="ListBox_SelectionChanged1" Grid.RowSpan="2">
            <ListBoxItem Background="Red" Content="Match"  Height="20"/>
            <ListBoxItem Background="#FFD85757" Content="Physics"/>
            <ListBoxItem Background="#FF1700FF" Content="Rus.Leng"/>
            <ListBoxItem Background="#FF8176EE" Content="Literature"/>
            <ListBoxItem Background="#FF3A97CD" Content="English"/>
            <ListBoxItem Background="Cyan" Content="Solicalscince"/>
            <ListBoxItem Background="#FF00B8B8" Content="History"/>
            <ListBoxItem Background="#FF1EA200" Content="Chemistry"/>
            <ListBoxItem Background="#FF00FF0C" Content="Biology"/>
            <ListBoxItem Background="#FFFFAE00" Content="Computer scince"/>
            <ListBoxItem Background="#FFFFF300" Content="Geography"/>
            <ListBoxItem Background="#FFB89E9E" Content="OBJ"/>
            <ListBoxItem Background="#FFFF0AE9" Content="PE"/>
        </ListBox>

        <TextBox HorizontalAlignment="Left" Height="23" Margin="339,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="443" Text="Enter subject for your score:"/>
        <TextBox Name="Textbox1" HorizontalAlignment="Left" Height="23" Margin="214,31,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="114"/>
        <ToolBar HorizontalAlignment="Right" Height="26" Margin="0,0,6,0" VerticalAlignment="Top" Width="786" RenderTransformOrigin="0.5,0.5" >
            <ToolBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0."/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.648"/>
                </TransformGroup>
            </ToolBar.RenderTransform>
           
            

            <Button Content="Options" ContentStringFormat="Help"/>
            <Separator />
            
        </ToolBar>

        <Button Content="2" HorizontalAlignment="Left" Margin="109,31,0,0" VerticalAlignment="Top" Width="100" Background="#FFFF1717"/>
        <Button Content="3" HorizontalAlignment="Left" Margin="109,54,0,0" VerticalAlignment="Top" Width="100" Background="#FFFFFF12"/>
        <Button Content="4" HorizontalAlignment="Left" Margin="109,77,0,0" VerticalAlignment="Top" Width="100" Background="#FF0DB205"/>
        <Button Content="5" HorizontalAlignment="Left" Margin="109,100,0,0" VerticalAlignment="Top" Width="100" Background="Blue"/>
        <TextBox Name="Clicker" HorizontalAlignment="Left" Height="23" Margin="214,57,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="Totalresult" HorizontalAlignment="Left" Height="23" Margin="339,54,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="443"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="327" Margin="339,82,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="443"/>
    </Grid>
</Window>
